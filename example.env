# Domain and URL settings
LOCAL_DOMAIN=example.com

# Database configuration
DB_HOST=db
DB_USER=mastodon
DB_PASS=your_password_here
DB_NAME=mastodon_production

# Rails secrets (generate these with `bundle exec rake secret`)
SECRET_KEY_BASE=REPLACE_WITH_A_SECRET_KEY_BASE
OTP_SECRET=REPLACE_WITH_AN_OTP_SECRET

# SMTP settings (if you plan to use email notifications)
SMTP_ADDRESS=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_DOMAIN=example.com
SMTP_AUTHENTICATION=login
SMTP_ENABLE_STARTTLS_AUTO=true

# Application environment
RAILS_ENV=production
NODE_ENV=production
